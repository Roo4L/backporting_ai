---
const { title = 'Backporting.ai', description = 'Patch backporting automation: resources and digests.' } = Astro.props;
const base = import.meta.env.BASE_URL;
---
<!doctype html>
<html lang="en" class="h-full">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <link rel="icon" href={`${base}favicon.svg`} />
    <title>{title}</title>
  </head>
  <body class="h-full bg-white text-slate-900">
    <header class="border-b bg-white/80 backdrop-blur">
      <div class="mx-auto max-w-6xl px-4 py-4 flex items-center justify-between">
        <a href={base} class="text-xl font-semibold bg-gradient-to-r from-sky-700 to-indigo-700 bg-clip-text text-transparent">Backporting.ai</a>
        <nav class="space-x-6 text-sm">
          <a class="text-slate-700 hover:text-sky-700" href={`${base}articles`}>Articles</a>
          <a class="text-slate-700 hover:text-sky-700" href={`${base}digests`}>Digests</a>
        </nav>
      </div>
    </header>
    <main class="mx-auto max-w-6xl px-4 py-12">
      <slot />
    </main>
    <footer class="border-t border-slate-200 bg-white">
      <div class="mx-auto max-w-6xl px-4 py-6 text-sm text-slate-600 flex flex-col sm:flex-row items-center justify-between gap-3">
        <p>© {new Date().getFullYear()} Backporting.ai · Curated resources on patch backporting automation.</p>
        <div class="flex items-center gap-4">
          <a href="mailto:hello@backporting.ai" class="hover:text-slate-800">hello@backporting.ai</a>
          <a href="https://github.com/Roo4L/backporting_ai" class="hover:text-slate-800" rel="noopener noreferrer">GitHub</a>
        </div>
      </div>
    </footer>
  </body>
  <style is:global>
    @tailwind base;
    @tailwind components;
    @tailwind utilities;
  </style>
</html>


